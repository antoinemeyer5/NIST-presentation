\definecolor{titleboxcolor}{rgb}{0.447,0.486,0.639}
\definecolor{subtitleboxcolor}{rgb}{0.624,0.722,0.804}

\mode<presentation>

\setbeamertemplate{background}{
  \begin{tikzpicture}
  \useasboundingbox (0,0) rectangle(\the\paperwidth,\the\paperheight);
  % title box
  \fill[color=titleboxcolor] (1.6,5) rectangle (14.5,3.4);
  \fill[color=white] (2,4.98) rectangle (14.48,3.42);
  % sub title box
  \fill[color=subtitleboxcolor] (1.6,3.26) rectangle (14.5,2.4);
  \fill[color=white] (2,3.24) rectangle (14.48,2.42);
  \ifnum\thepage>1\relax%
   \fill[white,opacity=1] (0,0) rectangle(\the\paperwidth,\the\paperheight);
   \fi
  \end{tikzpicture}
}

