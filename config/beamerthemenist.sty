\mode<presentation>

% Requirement
\RequirePackage{tikz}

% Settings
\useinnertheme{nist}
\useoutertheme{nist}
\usecolortheme{nist}

\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{blocks}[rounded][shadow=true]


\setbeamertemplate{navigation symbols}{}

\definecolor{theoremcolor}{rgb}{0.447,0.486,0.639}
\AtBeginEnvironment{theorem}{%
  \setbeamercolor{block title}{use=example text,fg=white,bg=theoremcolor!75!black}
  \setbeamercolor{block body}{parent=normal text,use=block title example,bg=theoremcolor!10}
}

